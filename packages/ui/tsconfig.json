{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "ui/*": ["src/*"]
    }
  },
  "include": ["src"],
  "references": [] // No dependencies on other packages yet
} 