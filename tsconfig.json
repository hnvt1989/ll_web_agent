{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "backend/*": ["packages/backend/src/*"],
      "ui/*": ["packages/ui/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
} 